---
import Layout from "../../layouts/Layout.astro";
import { useTranslations } from "../../i18n/utils";
import CardInicio from "../../components/teste/CardInicio.astro";
import SeletorIdiomaUI from "../../components/teste/SeletorIdiomaUI.astro";

const t = useTranslations("pt");
---

<Layout title={t("testtool.home.title")}>
	<SeletorIdiomaUI t={t} slot="before-main" lang="pt" />
	<CardInicio t={t} lang="pt" />
</Layout>

<style is:global>
	main {
		background: #fff;
		border: 1px solid #bbb;
		border-radius: 10px;
		padding: 20px;
		margin: 30px auto 60px;
		box-shadow: 0px 2px 8px 2px lightgrey;
	}
</style>
